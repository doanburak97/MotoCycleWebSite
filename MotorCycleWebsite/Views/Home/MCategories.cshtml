@model IEnumerable<MotorCycleWebsite.Models.Categories>
@{
    ViewBag.Title = "MCategories";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div id="sayfaMain">
    <div id="ustAlanMain">
        <h3>Categories</h3>
    </div>
    <div id="altAlanMain">
        <table>
            <tr>
                @foreach (var item in Model)
                {

                    <td id="tdMain">
                        <img id="imgMain" src="@item.ImageUrl" />
                        <div id="divModelMarka">@item.CategorieName</div>
                    </td>
                }
            </tr>

        </table>
    </div>
</div>