@model MotorCycleWebsite.Models.DealerProducts

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DealerProducts</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DealerProductId)

        <div class="form-group">
            @Html.LabelFor(model => model.DealerId, "DealerId", htmlAttributes: new { @class = "control-label col-md-2" })
